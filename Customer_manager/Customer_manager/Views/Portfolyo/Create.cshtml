@model Portfolyo

@{
	Layout = "_AdminLayout";
}

<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Vertical Form</h5>

				<!-- Vertical Form -->
				<form class="row g-3" method="post" enctype="multipart/form-data">
					<input type="text" asp-for="ID" class="form-control" id="inputNanme4" hidden>
					<input type="hidden" asp-for="PhotoPath" class="form-control" id="inputNanme4">
					<div class="col-12">
						<label for="inputNanme4" class="form-label">Kategori</label>
						<input type="text" asp-for="Category" class="form-control" id="inputNanme4">
					</div>
					<div class="col-12">
						<label for="inputEmail4" class="form-label">Proje Adı</label>
						<input type="text" asp-for="ProjectName" class="form-control" id="inputEmail4">
					</div>
					<div class="col-12">
						<label for="inputEmail4" class="form-label">Fotoğraf</label>
						<input type="file" asp-for="Photo" class="form-control" id="inputEmail4">
					</div>

					<div class="col-12">
						<label for="inputAddress" class="form-label">İçerik yazısı</label>
						<input type="text" asp-for="Descripton" class="form-control" id="inputAddress" placeholder="İçerik">
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-primary">Kaydet</button>
						<a href="/admin/index" class="btn btn-secondary">İptal</a>
					</div>
				</form><!-- Vertical Form -->

			</div>
		</div>


	</div>
</div>


