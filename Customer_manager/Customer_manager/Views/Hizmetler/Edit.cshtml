@model Hizmetler
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Düzenle</h5>

				<!-- Vertical Form -->
				<form class="row g-3" method="post">
					<input type="text" asp-for="CustomerInfoId" class="form-control" id="inputNanme4" hidden>
					<input type="text" asp-for="ID" class="form-control" id="inputNanme4" hidden>
					<div class="col-12">
						<label for="inputNanme4" class="form-label">İcon</label>
						<input type="text" asp-for="Icon" class="form-control" id="inputNanme4">
					</div>
					<div class="col-12">
						<label for="inputEmail4" class="form-label">Başlık</label>
						<input type="text" asp-for="Title" class="form-control" id="inputEmail4">
					</div>

					<div class="col-12">
						<label for="inputAddress" class="form-label">İçerik yazısı</label>
						<input type="text" asp-for="Description" class="form-control" id="inputAddress" placeholder="İçerik">
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-primary">Kaydet</button>
						<button type="reset" class="btn btn-secondary">İptal</button>
					</div>
				</form><!-- Vertical Form -->

			</div>
		</div>


	</div>
</div>

