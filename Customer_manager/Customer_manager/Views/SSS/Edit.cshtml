@model SSS

@{
	Layout = "_AdminLayout";
}

<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Sıkça Sorulan Sorular Güncelle</h5>

				<!-- Vertical Form -->
				<form class="row g-3" method="post">
					<input type="text" asp-for="ID" class="form-control" id="inputNanme4" hidden>
					<div class="col-12">
						<label for="inputNanme4" class="form-label">Soru</label>
						<input type="text" asp-for="Soru" class="form-control" id="inputNanme4">
					</div>
					<div class="col-12">
						<label for="inputEmail4" class="form-label">Cevap</label>
						<input type="text" asp-for="Cevap" class="form-control" id="inputEmail4">
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary">Kaydet</button>
						<a href="/admin/index" class="btn btn-secondary">İptal</a>
					</div>
				</form><!-- Vertical Form -->

			</div>
		</div>


	</div>
</div>


