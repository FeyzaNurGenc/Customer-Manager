@model Customer_manager.Models.Customer_infos




@*  tabloları buraya koyabiliriz  *@
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Yetenekler</h5>

                <!-- Default Table -->
                <table class="table">
                    <thead>
                    <th>@Html.ActionLink("Yeni Yetenek Ekle", "Create", "Skills", null, new { @class = "btn btn-success", role = "button" })</th>

                    <tr>


                        <th scope="col">Başlık</th>
                        <th scope="col">Değer</th>        
                        <th scope="col">İşlemler</th>


                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Skills)
                        {
                            <tr>

                                <td>@i.Title</td>
                                <td>%@i.Value</td>
                              

                                <td>
                                    <div style="display: inline-block;">
                                        <a href="/skills/edit/@i.ID" class="btn btn-success">Güncelle</a>
                                    </div>
                                    <div style="display: inline-block;">
                                        <form id="deleteForm" action="/skills/delete/@i.ID" method="post">
                                            <button class="btn btn-danger" type="submit" onclick="return confirm('Silmek İstediğininze Emin misiniz?')">Sil</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>

                <!-- End Default Table Example -->
            </div>
        </div>

    </div>
</div>

