@model About
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Düzenle</h5>

                <form class="row g-3" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="CustomerInfoId" class="form-control" id="inputNanme4">
                    <input type="hidden" asp-for="ID" class="form-control" id="inputNanme4">
                    <input type="hidden" asp-for="PhotoPath" class="form-control">
                    <div class="col-12">
                        <label for="inputNanme4" class="form-label">Fotoğraf</label>
                        <input type="file" asp-for="Photo" class="form-control" id="inputNanme4">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">Hakkımda yazısı</label>
                        <input type="text" asp-for="Description" class="form-control" id="inputAddress" placeholder="İçerik">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <button type="reset" class="btn btn-secondary">İptal</button>
                    </div>
                </form>

			</div>
		</div>


	</div>
</div>

